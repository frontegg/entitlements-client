{
	"compilerOptions": {
		"module": "CommonJS",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strictPropertyInitialization": true,
		"allowJs": true,
		"strict": true,
		"target": "es6",
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"es2018",
			"es2019",
			"es2020",
			"es2021",
			"es2022",
			"esnext",
		],
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"incremental": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"test",
		"coverage",
		"test-results",
		"**/*.spec.ts",
		"**/*spec-helper.ts"
	]
}
